@model LMS.Models.Module

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Module</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Course:
        </dt>

        <dd>
            @Html.ActionLink(@Model.Course.Name, "Details", "Courses", new { id = Model.Course.Id }, new { })
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            Start Date
        </dt>

        <dd>
            @Model.StartDate.ToShortDateString()
        </dd>

        <dt>
            End Date
        </dt>

        <dd>
            @Model.EndDate.ToShortDateString()
        </dd>
    </dl>
</div>
<div>
    <h4>Activities</h4>
    <table class="table">
        <tr>
            <th>
                Module Name
            </th>
            <th>
                Description
            </th>
            <th>
                Start Date
            </th>
            <th>
                End Date
            </th>
        </tr>

        @foreach (var item in Model.Activities)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.Name, "Details", "Activities", new { Id = item.Id }, new { })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @item.StartDate.ToShortDateString()
                </td>
                <td>
                    @item.EndDate.ToShortDateString()
                </td>
            </tr>
        }
    </table>

</div>
<p>
    @Html.ActionLink("Back to list", "Index", "Modules", new { }, new { })
    @if (User.IsInRole("Teacher"))
    {
        @: | @Html.ActionLink("Delete", "Delete", new { id = Model.Id })
        @: | @Html.ActionLink("Edit", "Edit", new { id = Model.Id })
    }
</p>